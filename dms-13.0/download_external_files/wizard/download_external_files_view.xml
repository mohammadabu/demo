                <field name="view_mode">form</field>
                <!-- <field name="view_id" ref="custom_upload_images_report_view"/> -->
                <field name="target">new</field>
            </record>
        <menuitem
            id="menu_dms_file_upload_images"
            name="Download External Files"
            parent="dms.cat_menu_dms_config_system"
            action="action_dms_file_download_external_files"
            sequence="9" 
        />
    </data>    
