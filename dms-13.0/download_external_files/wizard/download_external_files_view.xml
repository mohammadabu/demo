<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="custom_upload_images_report_view" model="ir.ui.view">
            <field name="name">custom_upload_images.wizard</field>
            <field name="model">custom_upload_images.wizard</field>
            <field name="arch" type="xml">
               <form>
                   <group>
                        <!-- <group string="Select Stages"> 
                            <field name="stages" widget="many2many_checkboxes"/>
                        </group> -->
                        <footer>
                            <button string="Download External Files" name="download_external_files" type="object" class="btn-primary"/>
