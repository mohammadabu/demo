<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_inherit_form_view" model="ir.ui.view">
        <field name="name">purchase.order.inherit.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <button name="button_cancel" position="attributes">
				<attribute name="invisible">1</attribute>
            </button>
            <xpath expr="//header/button[@name='button_cancel']" position="after">
                <button name="sh_cancel" string="Cancel" type="object" groups="sh_purchase_cancel.group_sh_purchase_cancel" attrs="{'invisible':[('state','=','cancel')]}"></button>
            </xpath>
        </field>
    </record>
</odoo>
