<odoo>
    <data>
        <menuitem id="menu_action_move_out_invoice_type" parent="stock.menu_warehouse_report" action="account.action_move_out_invoice_type" sequence="1"/>
    
        <record id="edit_scrap_order_fields" model="ir.ui.view">
            <field name="name">edit scrap order fields</field>
            <field name="model">stock.scrap</field>
            <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group/group[1]/field[@name='product_id']" position="after">
                    <field name="reason" />
                </xpath>
            </field>
        </record>

        <record id="edit_scrap_order_field_tree" model="ir.ui.view">
            <field name="name">stock.scrap.tree</field>
            <field name="model">stock.scrap</field>
            <field name="inherit_id" ref="stock.stock_scrap_tree_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='scrap_qty']" position="after">
                    <field name="reason"/>
                </xpath>                
            </field>                               
        </record>

        <record id="edit_stock_picking_field_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <!-- <xpath expr="//header/button[last()]" position="after">
                    <button name="print_vat_invoice" string="Print Invoice" type="object" />
                </xpath>         -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="invoice_id" invisible="1"/>
                </xpath>            
            </field>                               
        </record>

        <record id="view_picking_form" model="ir.ui.view">
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <div class="oe_button_box" name="button_box">
                    <button name="action_created_invoice"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        attrs="{'invisible': [('invoice_id', '=', False)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">1</span>
                            <span class="o_stat_text">Invoices</span>
                        </div>
                    </button>
                </div>
            </field>
        </record>

        
        <record id="edit_stock_valutation_layer_field_tree" model="ir.ui.view">
            <field name="name">stock.valuation.layer.new.fields</field>
            <field name="model">stock.valuation.layer</field>
            <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='quantity']" position="after">
                    <field name="unit_cost"/>
                </xpath>                
            </field>                               
        </record>
    </data>
</odoo>