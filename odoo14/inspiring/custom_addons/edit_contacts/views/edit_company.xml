<odoo>
    <data>
        <record id="custom_edit_company" model="ir.ui.view">
            <field name="name">Custom Edit Company</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='zip']" position="after">
                    <field name="po_box" placeholder="P.O. Box" />
                </xpath>
            </field>
        </record>
    </data>
</odoo> 