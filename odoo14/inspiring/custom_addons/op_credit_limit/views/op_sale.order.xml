<odoo>
    <data>
        <record id="sale_order_inherit_credit_limit" model="ir.ui.view">
            <field name="name">Show Partner Credit Limit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="credit_limit" groups="op_credit_limit.group_user"/>
                    <field name="balance" groups="op_credit_limit.group_user"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>