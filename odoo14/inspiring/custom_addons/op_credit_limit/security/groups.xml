<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="module_op_credit_limit_category" model="ir.module.category">
            <field name="name">Credit Limit</field>
            <field name="description">User access level for this module</field>
            <field name="sequence">10</field>
        </record>
        <!-- group user -->
        <record id="group_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_op_credit_limit_category" />
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        </record>
        <!-- group manager -->
        <record id="group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_op_credit_limit_category" />
            <field name="implied_ids" eval="[(4, ref('op_credit_limit.group_user'))]" />
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />

        </record>

        <!-- credit request use -->
        <record id="module_op_credit_request_category" model="ir.module.category">
            <field name="name">Credit Request</field>
            <field name="sequence">17</field>
        </record>
        <record id="group_crdit_request_user" model="res.groups">
            <field name="name">Request Credit</field>
            <field name="category_id" ref="op_credit_limit.module_op_credit_request_category" />
            <!-- <field name="implied_ids" eval="[(4, ref('base.group_user'))]" /> -->

        </record>

        <record id="group_crdit_request_sales_approval" model="res.groups">
            <field name="name">Sales manager approval</field>
            <field name="category_id" ref="op_credit_limit.module_op_credit_request_category" />
            <!-- <field name="implied_ids" eval="[(4, ref('group_crdit_request_user'))]" /> -->

        </record>

        <record id="group_credit_request_accounting_approval" model="res.groups">
            <field name="name">Accounting manager approval</field>
            <field name="category_id" ref="op_credit_limit.module_op_credit_request_category" />
            <!-- <field name="implied_ids" eval="[(4, ref('human.group_ticket_approval'))]" /> -->

        </record>
        <record id="group_credit_request_legal_approval" model="res.groups">
            <field name="name">Legal Approval</field>
            <field name="category_id" ref="op_credit_limit.module_op_credit_request_category" />
            <!-- <field name="implied_ids" eval="[(4, ref('human.group_ticket_recommend'))]" /> -->
        </record>
        <record id="group_credit_request_gm_approval" model="res.groups">
            <field name="name">General Manager Approval</field>
            <field name="category_id" ref="op_credit_limit.module_op_credit_request_category" />
            <!-- <field name="implied_ids" eval="[(4, ref('human.group_ticket_recommend'))]" /> -->
        </record>

        <record id="group_credit_set_credit_limit" model="res.groups">
            <field name="name">Set Credit Limit</field>
            <field name="category_id" ref="op_credit_limit.module_op_credit_request_category" />
        </record>
        
    </data>
</odoo>