<?xml version="1.0" encoding="utf-8"?>
<odoo>
		 <record id="product_template_hide_costprice" model="ir.ui.view">
			 <field name="name">product.template.hide.costprice</field>
			 <field name="model">product.template</field>
			 <field name="inherit_id" ref="product.product_template_only_form_view"/>
			 <field name="arch" type="xml">
					<xpath expr="//field[@name='standard_price']" position="replace" >
					    <field name="standard_price" groups="hide_costprice.hide_cost_price"/>
                    </xpath>
                    <xpath expr="//label[@for='standard_price']" position="replace" >
					     <label for="standard_price" groups="hide_costprice.hide_cost_price" />
                    </xpath>
     		</field>
		 </record>
		 
		 <record id="product_template_hide_tree_view" model="ir.ui.view">
			 <field name="name">product.template.tree.view</field>
			 <field name="model">product.template</field>
			 <field name="inherit_id" ref="product.product_template_tree_view"/>
			 <field name="arch" type="xml">
					<xpath expr="//field[@name='standard_price']" position="replace" >
					    <field name="standard_price" groups="hide_costprice.hide_cost_price"/>
                    </xpath>
     		</field>
		 </record>
		 <record id="product_template_hide_cost_kanban" model="ir.ui.view">
			 <field name="name">product.template.hide.cost.kanban</field>
			 <field name="model">product.template</field>
			 <field name="inherit_id" ref="product.product_template_kanban_view"/>
			 <field name="arch" type="xml">
					<xpath expr="//field[@name='lst_price']" position="after" >
					    <field name="standard_price"/>
                    </xpath>
                    <xpath expr="//div[@class='mt-1']" position="after" groups="hide_costprice.hide_cost_price" >
                                <b groups="hide_costprice.hide_cost_price">Cost Price:</b> <field name="standard_price" groups="hide_costprice.hide_cost_price"  widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                     </xpath>
                    
     		</field>
		 </record>
		 
		 <record id="product_product_hide_form_view" model="ir.ui.view">
			 <field name="name">product.product.hide.form.view</field>
			 <field name="model">product.product</field>
			 <field name="inherit_id" ref="product.product_normal_form_view"/>
			 <field name="arch" type="xml">
					<xpath expr="//field[@name='standard_price']" position="replace" >
					    <field name="standard_price" groups="hide_costprice.hide_cost_price"/>
                    </xpath>
                    <xpath expr="//label[@for='standard_price']" position="replace" >
					     <label for="standard_price" groups="hide_costprice.hide_cost_price" />
                    </xpath>
     		</field>
		 </record>
		 
		  <record id="product_product_hide_tree_view" model="ir.ui.view">
			 <field name="name">product.product.tree.view</field>
			 <field name="model">product.product</field>
			 <field name="inherit_id" ref="product.product_product_tree_view"/>
			 <field name="arch" type="xml">
					<xpath expr="//field[@name='standard_price']" position="replace" >
					    <field name="standard_price" groups="hide_costprice.hide_cost_price"/>
                    </xpath>
     		</field>
		 </record>
		  <record id="product_product_hide_cost_kanban" model="ir.ui.view">
			 <field name="name">product.product.hide.cost.kanban</field>
			 <field name="model">product.product</field>
			 <field name="inherit_id" ref="product.product_kanban_view"/>
			 <field name="arch" type="xml">
					<xpath expr="//field[@name='lst_price']" position="after" >
					    <field name="standard_price"/>
                    </xpath>
                    <xpath expr="//ul" position="inside" >
                                <li groups="hide_costprice.hide_cost_price"><b>Cost Price:</b> <field name="standard_price"  widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                </li>
                     </xpath>
                    
     		</field>
		 </record>
</odoo>
