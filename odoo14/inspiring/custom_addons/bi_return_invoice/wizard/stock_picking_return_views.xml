<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add button in existing reversal wizard -->
        <record id="view_stock_return_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock.return.picking.form.inherit</field>
            <field name="model">stock.return.picking</field>
            <field name="inherit_id" ref="stock.view_stock_return_picking_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='create_returns']" position="after">
                    <field name="has_invoices" invisible="1"/>
                    <field name="picking_type" invisible="1"/>
                    <button name="%(bi_return_invoice.action_view_return_picking_reversal)d" string="Return with Credit Note" type="action" class="btn-primary" attrs="{'invisible': ['|', ('has_invoices', '=', False), ('picking_type', '!=', 'outgoing')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
