<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Show Destination Account field -->
    <record model="ir.ui.view" id="inherit_account_payment_form_view">
        <field name="name">inherit.account.payment.form.view</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/> 
        <field name="arch" type="xml">
            <!-- <xpath expr="//group[@name='partner_group']/field[@name='partner_id']" position="after"> -->
            <xpath expr="//group[@name='group1']/field[@name='partner_id']" position="after">
                <field name="destination_account_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
            </xpath>
        </field>
    </record>
</odoo>