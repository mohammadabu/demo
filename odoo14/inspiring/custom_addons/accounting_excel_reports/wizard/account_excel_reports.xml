<odoo>

    <record id="account_aged_balance_excel_view" model="ir.ui.view">
        <field name="name">Aged Partner Balance</field>
        <field name="model">account.aged.trial.balance</field>
        <field name="inherit_id" ref="base_accounting_kit.account_aged_balance_view"/>
        <field name="arch" type="xml">
            <button name="check_report" position="after">
                or
                <button name="check_report" string="Print Excel"
                        type="object" class="oe_highlight"
                        context="{'excel_report':1}"
