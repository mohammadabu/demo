<odoo>
    <data>
        <record id="edit_account_overview" model="ir.ui.view">
            <field name="name">account.overview.new.option</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban/templates/t[3]/div[1]/div[2]" position="inside">
                    <div>
                        <a role="menuitem" type="object" name="create_other_payment">Other Payment</a>
                    </div>
                </xpath> 
            </field>
        </record>
        <record id="edit_account_form_new" model="ir.ui.view">
            <field name="name">Edit Account Form New</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='button_cancel']" position="replace">
                    <button name="button_cancel" string="Cancel Entry" type="object" groups="account.group_account_invoice" invisible="1"/>
                    <!-- <attribute name="attrs">{'invisible': '1'}</attribute> -->
                </xpath> 
                <xpath expr="//field[@name='payment_reference']" position="before">
                    <field name="sale_order" />
                </xpath>
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="check" invisible = "1" />
                    <field name="name" attrs="{'readonly': [('check', '=', True)]}" />
                </xpath>
            </field>
        </record>
        <record id="account_search_form_view" model="ir.ui.view">
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//group/filter[@name='status']" position="after">
                    <separator/>
                    <field name="amount_untaxed_signed"/>
                    <field name="amount_total"/>
                    <field name="amount_total_signed"/>
                    <separator/>
                </xpath>                
            </field>
        </record>

        <menuitem id="accounting_account_banks_menu" name="Banks" sequence="49" parent="account.menu_finance_entries">
            <menuitem id="accounting_menu_action_account_bank_journal_form" action="account.action_new_bank_setting" groups="account.group_account_readonly" sequence="1"/>
        </menuitem>

        <!-- <menuitem id="base_accounting_kit.account_financial_reports_profit_loss" sequence="1"
                  name="Profit and Loss" parent="base_accounting_kit.account_reports_generic_statements"
                  action="base_accounting_kit.action_profit_and_loss_report" groups="make_invisible"/> -->
    </data>
</odoo>