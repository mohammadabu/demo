<?xml version="1.0" encoding="utf-8"?>
<odoo>
	 <record id="account_payment_view_inherit" model="ir.ui.view">
	    <field name="name">account_payment_view_inherit</field>
	    <field name="model">account.payment</field>
	    <field name="inherit_id" ref="account.view_account_payment_form"/>
	    <field name="arch" type="xml">
	    	<field name="payment_method_id" position="after">
	    		<field name="account_bank_statement_id" string="Ref" readonly="1"/>
			</field>
			<field name="journal_id" position="attributes">
				<attribute name="string">Bank Account</attribute>
	  		</field>
	  		<xpath expr="//sheet/group[1]/group[3]/div[1]/field[@name='amount']" position="attributes">
	  			<attribute name="readonly">0</attribute>
	  		</xpath>
	  	</field>
	</record>
</odoo>
