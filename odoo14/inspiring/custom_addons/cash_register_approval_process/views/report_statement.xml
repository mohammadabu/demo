<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_statement_extends" inherit_id="account.report_statement">
          <xpath expr="//div[hasclass('page')]/table[@class='table table-lg m-0 table-borderless border border-right-0 border-left-0 border-info']" position="after">
			   <table class="table table-borderless m-0">
			      <thead>
			         <table class="table table-borderless">
			            <tr class="font-weight-bold">
			               <td class="p-0 w-25">Date</td>
			               <td class="p-0 w-25">Label and Partner</td>
			               <td class="p-1 text-right">Cashier Appr Amount</td>
			               <td class="p-1 text-right">Factory Appr amount</td>
			               <td class="p-1 text-right">HO Appr amount</td>
			               <td class="text-right p-1">Amount</td>
			            </tr>
			            <t t-foreach="o.line_ids" t-as="line">
			               <tr>
			                  <td class="p-0 w-25">
			                     <span class="d-block font-weight-bold" t-field="line.date" />
			                  </td>
			                  <td class="p-0 w-25">
			                     <span class="d-block font-weight-bold" t-if="line.partner_id" t-field="line.partner_id" />
<!--			                     <span class="d-block" t-if="line.bank_account_id" t-field="line.bank_account_id" /-->
			                     <span class="d-block" t-if="line.name" t-field="line.name" />
<!--			                     <span class="d-block" t-if="line.note" t-field="line.note" /-->
			                  </td>
			                  <td class="p-1 text-right">
			                     <span class="d-block font-weight-bold" t-field="line.cashier_appr_amt" />
			                  </td>
			                  <td class="p-1 text-right">
			                     <span class="d-block font-weight-bold" t-field="line.factory_appr_amt" />
			                  </td>
			                  <td class="p-1 text-right">
			                     <span class="d-block font-weight-bold" t-field="line.ho_appr_amt" />
			                  </td>
			                  <td class="text-right p-1">
			                     <span class="d-block font-weight-bold" t-field="line.amount" />
			                  </td>
			               </tr>
			            </t>
			         </table>
			      </thead>
			      <tfoot>
			         <table class="table table-borderless">
			            <tr>
			               <td class="font-weight-bold p-1 text-right" colspan="5">Computed Balance</td>
			               <td class="text-right p-1">
			                  <span class="d-block font-weight-bold" t-field="o.balance_end" />
			               </td>
			            </tr>
			         </table>
			      </tfoot>
			   </table>
			</xpath>
        </template>
    </data>
</odoo>