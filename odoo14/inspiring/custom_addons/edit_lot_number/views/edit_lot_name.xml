<odoo>
    <data>
        <record id="view_stock_move_line_edit_lot_name" model="ir.ui.view">
            <field name="name">stock.move.line.edit.lot.name</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_name']" position="before">
                    <field name="lot_serial_list" invisible="context.get('show_lots_m2o')" widget="many2one_tags"/>
                </xpath>

                <xpath expr="//field[@name='lot_name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                    <attribute name="force_save">1</attribute>
                 </xpath>
            </field>
        </record>
    </data>
</odoo>