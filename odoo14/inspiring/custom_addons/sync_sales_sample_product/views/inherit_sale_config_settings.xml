<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_sale_config_settings_view_form" model="ir.ui.view">
            <field name="name">sample.product.res.config.settings.view.form.inherit.sale</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="sale.res_config_settings_view_form" />
            <field name="arch" type="xml">
            <xpath expr="//div[@name='catalog_setting_container']" position="after">
                <h2>Sample Product</h2>
                <div class="row mt16 o_settings_container" name="sample_product_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="po_product_sample">
                        <div class="o_setting_left_pane">
                            <field name="invoice_with_sample"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="invoice_with_sample"/>
                        </div>
                    </div>
                </div>
            </xpath>
            </field>
        </record>
    </data>
</odoo>
