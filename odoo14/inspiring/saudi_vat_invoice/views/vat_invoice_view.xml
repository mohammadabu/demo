<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_vat_invoice_form">
        <field name="name">vat.invoice.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_payment_term_id']" position="after">
                <![CDATA[&nbsp;]]>
                <field name="date_issue"/>
            </xpath>
            <xpath expr="//page[@name='other_info']" position="after">
                <field name="move_type" invisible="1"/>
                <page name="qr_code" string="QR Code" attrs="{'invisible': [('move_type', '=', 'entry')]}">
                    <group>
                        <field name="qr_code" widget="image" width="200" readonly="1" />
                    </group>

                </page>

            </xpath>
            <xpath expr="//button[@name='preview_invoice']" position="after">
                <field name="generate_method" invisible="1"/>
                <field name="qr_code" invisible="1"/>
                <button name="generate_qr_code" string="QR Code" type="object"
                        attrs="{'invisible': ['|','|','|',('generate_method', '=', 'auto'),('state', '!=', 'posted'),('qr_code', '!=', False),('move_type', '=', 'entry')]}"></button>
            </xpath>
        </field>
    </record>
</odoo>