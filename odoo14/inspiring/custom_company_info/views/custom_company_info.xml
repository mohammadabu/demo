<odoo>
    <data>
        <record id="custom_company_info" model="ir.ui.view">
            <field name="name">Custom Company</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='favicon']" position="after">
                    <field name="large_logo" widget="image"/>
                    <field name="company_footer" widget="image"/>
                    <field name="right_footer_logo" widget="image"/>
                    <field name="company_terms" widget="html"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>   