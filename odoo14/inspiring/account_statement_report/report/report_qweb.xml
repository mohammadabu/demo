<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_statement_template">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o"/>
           <div class="page">
                <div class="row">
                    <div class="col-12">
                        <h3>Account Statement</h3>
                    </div>
                </div>

                <div class="row mt32 mb32">
                    <div class="col-4">
                        <t><strong>Account:</strong> <span t-esc="o.name"/></t>
                    </div>
                    <div class="col-4">
                        <t><strong>Code:</strong><span t-esc="o.code"/></t>
                    </div>
                    <div class="col-4">
                        <t><strong>Type:</strong> <span t-esc="o.user_type_id.name"/></t>
                    </div>
                </div>
                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Debit</th>
                            <th>Credit</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <t t-set="total_debit" t-value="0.0"/>
                    <t t-set="total_credit" t-value="0.0"/>

                    <tr t-foreach="o.get_move_lines(from_date, to_date)" t-as="line">
                        <td><t t-esc="line.date"/></td>
                        <td><t t-esc="line.name"/></td>
                        <td><t t-esc="line.debit"/></td>
                        <td><t t-esc="line.credit"/></td>
                        <td><t t-esc="line.debit-line.credit"/></td>

                        <t t-set="total_debit" t-value="total_debit+line.debit"/>
                        <t t-set="total_credit" t-value="total_credit+line.credit"/>
                    </tr>
                    <tr>
                        <td></td>
                        <td><strong>Total</strong></td>
                        <td><strong><t t-esc="total_debit"/></strong></td>
                        <td><strong><t t-esc="total_credit"/></strong></td>
                        <td><strong><t t-esc="total_debit-total_credit"/></strong></td>
                    </tr>
                </table>
            </div>
        </t>
    </template>
    <template id="report_statement_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="account_statement_report.report_statement_template"/>
            </t>
        </t>
    </template>
</odoo>

