<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_approval_cancel_wizard" model="ir.ui.view">
		<field name="name">approval.cancel.wizard.form</field>
		<field name="model">approval.cancel.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<field name="record_ref" widget="reference" />
					<field name="model" invisible="1" />
					<field name="record_id" invisible="1" />
				</group>
				<group>
					<field name="reason" />
				</group>				
				<footer>
					<button string="confirm" name="action_cancel" type="object" class="btn-primary" />
					<button string="Cancel" class="btn-default" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

</odoo>